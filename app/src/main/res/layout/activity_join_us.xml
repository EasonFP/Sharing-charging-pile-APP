<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.JoinUsActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/title_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加盟 · 电小二"
        android:textColor="@color/theme_black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_join"
        app:layout_constraintVertical_bias="0.17000002">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_host_name"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginHorizontal="9dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_account" />

            <EditText
                android:id="@+id/text_host_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:layout_weight="9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="主人名称"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_host_phone"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_phone" />

            <EditText
                android:id="@+id/text_host_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:layout_weight="9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="请输入手机号"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_host_IDCard"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_idcard" />

            <EditText
                android:id="@+id/text_host_IDCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:layout_weight="9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="请输入身份证号"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_host_place"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_address" />

            <EditText
                android:id="@+id/text_host_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:layout_weight="9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="请输入桩的位置"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_join"
        android:layout_width="274dp"
        android:layout_height="56dp"
        android:backgroundTint="#000000"
        android:text="确认加盟桩主"
        android:textColor="#FFFFFF"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>